
        <article class="article">
            <header>
                <div class="jumbotron">
                    <div class="jumbotron-darken">
                        <div class="vertical-center">
                            <div class="container-fluid text-center">
                                <h1 class="headline"><%= page.title %></h1>
                            </div>
                        </div>
                    </div>
                    <img class="background" src="<%= url_for(page.path) %>header.jpg" />
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <h2 class="subtitle"><%= page.subtitle %></h2>
                            <dl class="dateline">
                                <dt>Posted on</dt>
                                &nbsp;
                                <dd><time pubdate datetime="<%= date_xml(page.date) %>"><%= date(page.date, 'dddd, MMMM Do YYYY') %></time></dd>
                                &nbsp;
                                <dt>by</dt>
                                &nbsp;
                                <dd rel="author"><a href="https://twitter.com/finnwea" target="_blank" rel="noopener" title="Twitter: @finnwea"><%= config.author %></a></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </header>
            <section class="container article-content">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <%- page.content %>
                    </div>
                </div>
            </section>
        </article>
